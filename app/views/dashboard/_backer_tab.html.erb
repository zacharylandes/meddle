
<div class = "dater-tab-container">
    <ul class="nav nav-tabs">
    <li class="nav-item">
     <%= link_to 'Dater Corner', dashboard_path(current_user, tab:'dater'), class:'nav-link'%>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="#">Backer Corner</a>
    </li>
    </ul>
</div>

<div class="card">
<h5 class="card-title">Your Daters</h5>
    <div class="card-body dater-tab-body">
    <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">First</th>
        <th scope="col">Last</th>
        <th scope="col">Percent Complete</th>
        <th scope="col">Answer Questions</th>  
        <th scope="col">Find a mate for them</th>
      </tr>
    </thead>
    <tbody>
    <% current_backer.daters.each  do |dater|%>
      <tr>
        <td><%= dater.f_name %></td>
        <td><%= dater.l_name %></td>
        <td>50%</td>
        <td><%= link_to 'Qs and Ts', new_backer_dater_comment_path(current_user, dater), class:'btn-primary btn-sm',id:'d-q-button'%></td>
        <td><%= link_to 'Find their mate', new_backer_dater_comment_path(current_user, dater), class:'btn-primary btn-sm',id:'d-q-button'%></td>
        <td id= 'backer-add-images' class = 'btn-primary'>Add to their photos</td>
        <tr class = 'image-container'  id= 'i1-container'>
          <td>
                <%= form_tag("/daters/#{dater.id}/images") do %>
            <p>  <%= label_tag :Image %></p>
            <p>  <%= file_field_tag :i_1, class:'form-control'%></p>
            <p>  <%= submit_tag "Add photo" , class: "primary-btn btn-md" %></p>
        <% end %>
          
          
          </td>
        </tr>
      </tr>
      <tr>
      
    </tr>
  <%  end %>     
    </tbody>
  </table>
    <h6>Or add a new dater below</h6>
    </div> 
    <%= render 'add_dater'%>
</div>  
